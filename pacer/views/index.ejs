<!DOCTYPE html>
<html>
  <head>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <script src="../animation/pixi.js" defer></script>
    <script src="../animation/pacer.js" defer></script>
    <div id="main-box">
      <div id="header" class="big-box">
      <p id="logo-text">Pacer</p>
      <% if (user) { %>
        <a href="/logout" class="login">Log Out</a>
      <% } else { %>
        <a href="/auth/google" class="login">Log In</a>
      <% } %>
      </div>
      <div id="animation" class="big-box">
        
      </div>

  <div id="books" class="big-box">
    <div class="book-display">
      <div class="cover-image"><a href="/add" class="add-book">
        <% if (books.length === 0) { %>
          +
        <% } %>
      </a></div>
    <div class="title-and-etc">
      <% if (books.length) { %>
        <%= books[0].title %> <br>
        <%= books[0].author %>
      <% } %>
    </div>
    <div class="indiv-books-stats">
      <% if (books.length) { %>
        <form action="/update/0?_method=PUT" method="POST">
          <input type="number" name="startPage" class="page-entry" value="<%= books[0].startPage %>">
        </form>
        <p class="legend">Pages Left: </p>
        <%= books[0].pagesLeft %>
      <% } %>
    </div>
  </div>
    <div class="book-display">
      <div class="cover-image">
      <a href="/add" class="add-book">
        <% if (books.length === 1) { %>
          +
        <% } %>
      </a></div>
    <div class="title-and-etc">
      <% if (books.length > 1) { %>
        <%= books[1].title %> <br>
        <%= books[1].author %>
      <% } %>
    </div>
    <div class="indiv-books-stats">
      <% if (books.length > 1) { %>
        <form action="/update/1?_method=PUT" method="POST">
          <input type="number" name="startPage" class="page-entry" value="<%= books[1].startPage %>">
        </form>
        <p class="legend">Pages Left: </p>
        <%= books[1].pagesLeft %>
      <% } %>
    </div>
  </div>
  <div class="book-display">
    <div class="cover-image"><a href="/add" class="add-book">
      <% if (books.length === 2) { %>
        +
      <% } %>
    </a></div>
    <div class="title-and-etc">
      <% if (books.length > 2) { %>
        <%= books[2].title %> <br>
        <%= books[2].author %>
      <% } %>
    </div>
    <div class="indiv-books-stats">
      <% if (books.length > 2) { %>
        <form action="/update/2?_method=PUT" method="POST">
          <input type="number" name="startPage" class="page-entry" value="<%= books[2].startPage %>">
        </form>
        <p class="legend">Pages Left: </p>
        <%= books[2].pagesLeft %>
      <% } %>
    </div></div>
    <div class="book-display">
      <div class="cover-image"><a href="/add" class="add-book">
        <% if (books.length === 3) { %>
          +
        <% } %>
      </a></div>
    <div class="title-and-etc">
      <% if (books.length > 3) { %>
        <%= books[3].title %> <br>
        <%= books[3].author %>
      <% } %>
    </div>
    <div class="indiv-books-stats">
      <% if (books.length > 3) { %>
        <form action="/update/3?_method=PUT" method="POST">
          <input type="number" method="POST" name="startPage" class="page-entry" value="<%= books[3].startPage %>">
        </form>
        <p class="legend">Pages Left: </p>
        <%= books[3].pagesLeft %>
      <% } %>
    </div></div>
  </div>
  <div id="stats" class="big-box">
    <div id="total-pages-left" class="stats-box">
      <% if (stats) { %>
      <h4 id="pages-left">Total Pages Left: <%= stats.totalPagesLeft %> |&nbsp</h4>
      <h4 id="goal-for-today">Goal for Today: <%= stats.totalPagesPerDay %> |&nbsp</h4>
      <h4 id="pages-read">Today's Reading: <%= stats.pagesToday %> </h4>
      <% } %>
    <br></div>
  </div>
</div>
</body>
</html>
